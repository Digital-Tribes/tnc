{% extends "base.njk" %}

{% block content %}

<div class="brand-area">
        <div class="container">
            
                <div class="row d-flex align-items-center">
                    {% for brand in collections.brands %}
                      <div class="col-md-3 col-6 single-brand">
                          <div class="inner">
                            <img decoding="async" src="{{ brand.data.image }}" loading="lazy" alt="{{ brand.data.name }}">
                          </div>
                      </div>
                    {% endfor %}
                </div>
        </div>
</div>

{% endblock content %}

