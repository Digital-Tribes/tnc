 <div class="portfolio-area">
    <div class="container">
        <div class="section-title">
            <h5 style="color: #37b4ce">{{ news.title }}</h5>
            <p class="ondertitel">{{ news.description }}</p>
        </div>
        <div class="row">
            {% for blog in collections.blogs %}
            {% if loop.index0 < 3 %}
            <div class="single-portfolio col-md-4">
              <div class="icon-box">
                <div class="inner">
                    <div class="portfolio-img">
                        <img style="border-radius: 10%;" decoding="async" src="{{ blog.data.image }}" loading="lazy" alt="{{ blog.data.name }}">
                        <div class="hover-content">
                            <div>
                                <a href="{{ blog.data.url }}" aria-label="Lees verder" class="button">Lees verder</a>
                            </div>
                        </div>
                    </div>
                        <div class="portfolio-content">
                            <a href="{{ blog.data.url }}"><h3>{{ blog.data.title }}</h3></a>
                            <span class="section-title">{{ blog.data.description }}</span>
                        </div>
                </div>
              </div> 
            </div>
            {% endif %}
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-12 cta-btn-container text-center" style="margin-bottom: 30px;">
